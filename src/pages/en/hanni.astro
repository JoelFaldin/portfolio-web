---
import { db, Pics } from "astro:db";

import Layout from "@/layouts/Layout.astro";
import Footer from "@components/Footer.astro";

const pics = await db.select().from(Pics);

const group1 = pics.slice(0, 4);
const group2 = pics.slice(4, 7);
const group3 = pics.slice(7, 10);
---

<Layout>
    <section class="bg-[#0a0a14] min-h-screen">
        <article class="w-full mx-auto py-16 text-center bg-[#1b1b24] border-b border-[#e6c478]/10">
            <h3 class="text-4xl font-bold mb-6 text-white font-serif text-center"><span class="text-[#e6c478]">Pham</span> Hanni</h3>
            <p class="text-center text-zinc-300 max-w-2xl mx-auto">Go hanni</p>
        </article>

        <article class="xl:mx-96 md:mx-32 my-20">
            <div class="flex flex-wrap py-0 px-[4px]">
                <div class="flex-1/3 max-w-1/3 py-0 px-[4px]">
                    {
                        group1.map((pic, index) => (
                            <img src={pic.imageUrl} alt=`Hanni 1st section #${index}` class="mt-2 align-middle w-full rounded-xl border border-[#e6c478]/50" />
                        ))
                    }
                </div>
        
                <div class="flex-1/3 max-w-1/3 py-0 px-[4px]">
                    {
                        group2.map((pic, index) => (
                            <img src={pic.imageUrl} alt=`Hanni 2nd section #${index}` class="mt-2 align-middle w-full rounded-xl border border-[#e6c478]/50" />
                        ))
                    }
                </div>
        
                <div class="flex-1/3 max-w-1/3 py-0 px-[4px]">
                    {
                        group3.map((pic, index) => (
                            <img src={pic.imageUrl} alt=`Hanni 3rd section #${index}` class="mt-2 align-middle w-full rounded-xl border border-[#e6c478]/50" />
                        ))
                    }
                </div>
            </div>
        </article>

        <Footer />
    </section>
</Layout>