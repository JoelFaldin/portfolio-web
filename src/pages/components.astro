---
import Button from "@/components/Button.astro";
import Email from "@/components/logos/Email.astro";
import Express from "@/components/logos/Express.astro";
import Github from "@/components/logos/Github.astro";
import Layout from "@/layouts/Layout.astro";
import Linkedin from "@/components/logos/Linkedin.astro";
import Mongo from "@/components/logos/Mongo.astro";
import MySQL from "@/components/logos/MySQL.astro";
import Plane from "@/components/logos/Plane.astro";
import React from "@/components/logos/React.astro";
import Section from "@/components/Section.astro";
import Tailwind from "@/components/logos/Tailwind.astro";
import Tools from "@/components/logos/Tools.astro";
import Vite from "@/components/logos/Vite.astro";
---

<Layout title="Design System" desc="Collection that displays all the components used on the portfolio!">
  <Section class="pt-40 pb-20">
    <h1 class="font-bold text-3xl text-center mb-2">Design System</h1>
    <p class="text-sm text-center mb-10">Collection of components I used in this project!</p>

    <section class="flex flex-col md:flex-row items-center">
      <article class="w-1/3">
        <h1 class="font-bold text-xl py-2">Typography</h1>
        <hr class="mb-10 w-3/4" />
        
        <section class="my-5">
          <h1 class="text-white text-4xl font-bold">
            Headline 1
          </h1>
          <p>H1 text-4xl</p>
        </section>
  
        <section class="my-5">
          <h2 class="text-white text-3xl font-bold">
            Headline 2
          </h2>
          <p>H2 text-3xl</p>
        </section>
  
        <section class="my-5">
          <h3 class="text-2xl font-bold">
            Headline 3
          </h3>
          <p>H3 text-2xl</p>
        </section>

        <section class="my-5">
          <h3 class="text-xl font-bold">
            Headline 4
          </h3>
          <p>H3 text-xl</p>
        </section>
  
        <section class="my-5">
          <h4 class="text-xl font-bold">
            Paragraph
          </h4>
          <p>&lt;p /&gt;</p>
        </section>
      </article>
  
      <article class="w-1/3">
        <h1 class="font-bold text-xl py-2">Color scheme</h1>
        <hr class="mb-10 w-3/4" />
  
        <section class="flex flex-row gap-x-5 my-5">
          <div class="h-16 w-16 bg-[#fff]" />
          <div>
            <p>Primary</p>
            <p>#ffffff</p>
          </div>
        </section>
  
        <section class="flex flex-row gap-x-5 my-5">
          <div class="h-16 w-16 bg-cyan-500" />
          <div>
            <p>Secondary</p>
            <p>#06b6d4</p>
          </div>
        </section>
  
        <section class="flex flex-row gap-x-5 my-5">
          <div class="h-16 w-16 bg-gradient-to-r from-gray-700 to-black relative" />
          <div>
            <p>Buttons</p>
            <p>#374151</p>
          </div>
        </section>
  
        <section class="flex flex-row gap-x-5 my-5">
          <div class="h-16 w-16 bg-[#121212] border border-gray-400" />
          <div>
            <p>Background</p>
            <p>#121212</p>
          </div>
        </section>
  
      </article>
  
      <article class="w-1/3">
        <h1 class="font-bold text-xl py-2">Buttons & Icons</h1>
        <hr class="mb-10 w-3/4" />
  
        <section class="flex gap-x-4 text-wrap my-5">
          <Button href="https://uiverse.io/Itskrish01/dry-cougar-15" target="_blank">
            I'm a button!
          </Button>
        </section>
  
        <section class="flex flex-row gap-x-2 my-5">
          <Github class="size-6 md:size-8" />
          <Linkedin class="size-6 md:size-8" />
          <Email class="size-6 md:size-8" />
        </section>
  
        <section class="flex flex-row gap-x-2 my-5">
          <Plane class="size-6 md:size-8" />
          <Tools class="size-6 md:size-8" />
        </section>
  
        <section class="flex flex-row flex-wrap gap-x-2 my-5 ">
          <React class="size-8" />
          <Tailwind class="size-8" />
          <Vite class="size-8" />
          <Express class="size-8" />
          <MySQL class="size-8" />
          <Mongo class="size-8" />
        </section>
      </article>
    </section>
  </Section>
</Layout>