---
import { Toaster } from 'react-hot-toast';

import '../styles/global.css'
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Joel's Porfolio | Web Developer and Programmer</title>
	</head>
	<body>
		<Toaster position="bottom-right" reverseOrder={false} client:idle />
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
