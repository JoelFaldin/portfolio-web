---
import type { languageList } from "@/i18n/ui";
import { useTranslations } from "@/i18n/utils";
import Disc from "./icons/Disc.astro";
import Music from "./icons/Music.astro";

const currentLang = Astro.currentLocale || 'en';
const translateLabels = useTranslations(currentLang as keyof typeof languageList);
---

<section id="about" class="py-32 bg-[#0f0f1a]">
    <div class="container px-4 mx-auto">
        <div class="flex flex-col md:flex-row gap-12 items-center">
            <div class="md:w-1/2 w-full">
                <div class="relative w-fit mx-auto">
                    <div class="w-64 h-64 md:w-80 md:h-80 rounded-full bg-[#e6c478]/20 absolute -top-6 -left-6"></div>
                    <div class="w-64 h-64 md:w-80 md:h-80 rounded-full overflow-hidden relative border-2 border-[#e6c478]">
                        <img
                            src="/images/Profile_pic2.webp"
                            alt="Portrait"
                            class="object-cover object-[60%_20%]"
                        />
                    </div>
                    <div class="absolute -bottom-2 -right-4 bg-[#0a0a14] p-4 rounded-full border border-[#e6c478]">
                        <Music class="w-10 h-10 text-[#e6c478]" />
                    </div>
                </div>
            </div>
            <div class="md:w-1/2 w-full">
                <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white font-serif flex items-center">
                    <span class="text-[#e6c478]">{translateLabels("about.h2")}</span>
                    <span class="ml-2 text-nowrap">{translateLabels("about.dev")}</span>
                    <span class="h-px bg-[#e6c478] flex-grow ml-4 mr-4"></span>
                    <span class="bg-[#0a0a14] p-4 rounded-full border border-[#e6c478]">
                        <Disc class="w-10 h-10 text-[#e6c478]" />
                    </span>
                </h2>
                <p class="text-zinc-300 mb-3 leading-relaxed">
                    {translateLabels("about.desc1", {
                        name: <span class="text-[#e6c478]">Joel Fald√≠n</span>,
                        apps: <span class="font-bold">{currentLang === 'en' ? 'Full-Stack applications' : 'Aplicaciones web Full Stack'}</span>,
                    })}
                </p>
                <p class="text-zinc-300 mb-3 leading-relaxed">
                    {translateLabels("about.desc2", {
                        college: <span class="font-bold">{currentLang === 'en' ? 'last year of college' : '√∫ltimo a√±o de universidad'}</span>,
                        shark: <span class="text-[#e6c478]">BlackSharkWeb</span>
                    })}
                </p>
                <p class="text-zinc-300 mb-8 leading-relaxed">
                    {translateLabels("about.desc3")}
                </p>
                <div class="grid grid-cols-2 gap-6">
                    <div>
                        <h3 class="text-[#e6c478] font-bold mb-2">{translateLabels("about.skills")}</h3>
                        <ul class="text-zinc-300 space-y-1">
                            <li>React, Vue, NextJS, Astro</li>
                            <li>Express, NestJS</li>
                            <li>MySQL, PostgreSQL, SQLite, MongoDB</li>
                            <li>Linux üëç</li>
                        </ul>
                    </div>
                    <div>
                        <h3 class="text-[#e6c478] font-bold mb-2">{translateLabels("about.langs")}</h3>
                        <ul class="text-zinc-300 space-y-1">
                            <li>TypeScript</li>
                            <li>JavaScript</li>
                            <li>Rust</li>
                            <li>Java</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
