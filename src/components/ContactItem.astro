---
const { title, content } = Astro.props;
---
<section class="flex items-start gap-4">
    <div class="flex items-center justify-center w-10 h-10 rounded-full bg-[#e6c478]/10 text-[#e6c478] mt-1">
        <slot />
    </div>
    <div>
        <h4 class="text-[#e6c478] font-medium mb-1">{title}</h4>
        <p class="text-zinc-300">{content}</p>
    </div>
</section>