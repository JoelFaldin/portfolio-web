---
interface Tech {
  name: string,
  icon: any
}

interface Props {
  title: string,
  description: string,
  techs: Array<Tech>,
  href: string,
}

const { title, description, techs, href } = Astro.props
---

<article class="flex flex-col w-fit hover:bg-gray-800 hover:rounded-md hover:cursor-pointer transition-colors py-5 px-2">
  <a href={href}>
    <section class="overflow-hidden">
      <slot name="image" />
    </section>
    <section class="w-full gap-y-10">
      <h2 class="text-2xl font-bold my-3">{title}</h2>
  
      <p class="text-sm text-white mt-4 mb-4 w-3/4">{description}</p>
  
      <ul class="flex gap-x-4 flex-row mt-2 mb-2">
        {
          techs.map(logo => (
            <li>
            <span>
              <logo.icon class="size-8" />
            </span>
          </li>
          ))
        }
      </ul>
    </section>
  </a>

  <slot name="buttons" />
</article>